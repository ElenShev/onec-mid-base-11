&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	//Добавлен рассчет строки со скидкой
	//КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	//ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
    // ++ Шевкунова Задача 2 22.09.24 
	ОбщаяСкидка = ТекущиеДанные.Скидка + Объект.ДК_СогласованнаяСкидка;
	Если ОбщаяСкидка >= 100 Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = "Общая скидка больше 100%";
		Сообщение.Сообщить(); 
		ТекущиеДанные.Сумма = 0;
	Иначе
	КоэффициентСкидки = 1 - ОбщаяСкидка / 100;
	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
			
	КонецЕсли;

	//--
	

	
КонецПроцедуры

&НаКлиенте
Процедура ДК_СкидкаПоСтроке()
	// ++ Шевкунова Задача 2 22.09.24
	Для Каждого СТР Из Объект.Товары Цикл	
		РассчитатьСуммуСтроки(СТР); 
	КонецЦикла;
	Для Каждого СТР Из Объект.Услуги Цикл
		
		РассчитатьСуммуСтроки(СТР);
		
	КонецЦикла; 
	//
	
КонецПроцедуры

&НаКлиенте
Асинх Процедура ДК_ВопросОСкидке()
	
	// ++ Шевкунова Задача _____ 25.09.24 
	обещание = ВопросАсинх(НСтр("ru='Перессчитать суммы со скидкой?'" ), РежимДиалогаВопрос.ДаНет, , КодВозвратаДиалога.Да);
	Результат = Ждать Обещание;	
	
	Если Результат = КодВозвратаДиалога.Нет Тогда 		
		
		Возврат;
	Иначе
		
		ДК_СкидкаПоСтроке();
		
		
	КонецЕсли;  
	//

КонецПроцедуры



